doctype html
html(ng-app="app")
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel="stylesheet" href="/assets/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="/assets/ladda/dist/ladda-themeless.min.css")
    link(rel='stylesheet', href='/css/style.css')
  body
    nav(class="navbar navbar-default navbar-fixed-top" ng-controller="AuthController as authCtrl")
        div(class="container")
            div(class="navbar-header")
                a(class="navbar-brand" href="/") Alpha news
            ul(class="nav navbar-nav navbar-right" ng-show="authCtrl.isAuthenticated()")
                li
                    a(href="/submit") Send an article
                li
                    a(ng-click="authCtrl.logout()" href="#") Logout
            ul(class="nav navbar-nav navbar-right" ng-hide="authCtrl.isAuthenticated()")
                li
                    a(href="/login") Login/Register

    block content
    script(src="/assets/jquery/dist/jquery.min.js")
    script(src="/assets/bootstrap/dist/js/bootstrap.min.js")
    script(src="/assets/angular/angular.min.js")
    script(src="/assets/ladda/dist/spin.min.js")
    script(src="/assets/ladda/dist/ladda.min.js")
    script(src="/assets/angular-ladda/dist/angular-ladda.min.js")
    script(src="/assets/angular-resource/angular-resource.min.js")
    script(src="/js/app.js")
    script(src="/js/services.js")
    script(src="/js/controllers.js")
    script(src="/js/directives.js")